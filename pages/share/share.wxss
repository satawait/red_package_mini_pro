page {
	height: 100%;
	background: #c32f2f;
}

.img_area_box {
	position: relative;
	padding-top: 104%;
	height: 0;
}

.img_area_hide {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}

.img_area_hide {
	height: 119.23%;
	top: -150%;
}

.img_area_hide.hide {
    display: none;
}

.handle_box {
	background: #fff;
	border-radius: 10rpx;
	margin: 0 38rpx;
	text-align: center;
	padding: 36rpx 40rpx;
}

.handle_btn {
	border-radius: 10rpx;
	border: 1px solid #bfbfbf;
	line-height: 100rpx;
}

.handle_btn + .handle_btn {
	margin-top: 18rpx;
}

.primary {
	background: #089c2a;
	color: #fff;
	border: none;
}