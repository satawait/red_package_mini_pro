page {
	height: 100%;
	background: #c32f2f;
}

.img_area_box {
	position: relative;
	padding-top: 100%;
	height: 0;
}

.img_area_hide {
	position: absolute;
	left: 0;
	top: 0;
	top: -150%; 
	width: 100%;
	height: 123.4%;
}

.page_content {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
}

.bg {
	position: relative;
	width: 100%;
	z-index: -1;
}

.avatar_box {
	position: absolute;
	left: 50%;
	top: 20rpx;
	transform: translateX(-50%);
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	box-sizing: border-box;
	border: 3px solid #d87348;
	overflow: hidden;
}

.avatar_box image {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 100%;
}

.command_box {
	position: absolute;
	left: 0;
	right: 0;
	top: 40%;
}

.command {
	position: absolute;
	left: 50rpx;
	right: 50rpx;
	top: 50%;
	transform: translateY(-50%);
	text-align: center;
	color: #fbe194;
	font-size: 52rpx;
}

.mini_pro_code_box {
	position: absolute;
	left: 50%;
	top: 54%;
	width: 218rpx;
	height: 218rpx;
	box-sizing: border-box;
	border: 4px solid #bb2b2a;
	transform: translateX(-50%);
	border-radius: 50%;
	overflow: hidden;
	background: #fff;
}

.mini_pro_code {
	position: absolute;
	width: 94%;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}

.core {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 40%;
}

.brand_logo {
	position: absolute;
	left: 50%;
	top: 84%;
	transform: translateX(-50%);
	height: 48rpx;
}

.handle_box {
	position: relative;
	background: #fff;
	border-radius: 10rpx;
	margin: 0 38rpx;
	text-align: center;
	padding: 36rpx 40rpx;
}

.handle_btn {
	border-radius: 10rpx;
	border: 1px solid #bfbfbf;
	line-height: 100rpx;
}

.handle_btn + .handle_btn {
	margin-top: 18rpx;
}

.primary {
	background: #089c2a;
	color: #fff;
	border: none;
}

.back_btn {
	line-height: 100rpx;
	font-size: 24rpx;
	color: #7f7f7f;
}

.back_text {
	display: inline-block;
	vertical-align: middle;
}

.right_icon {
	vertical-align: middle;
	width: 13rpx;
	margin-left: 10rpx;
}

.right_icon.back {
	transform: rotate(180deg);
	margin-left: 0;
	margin-right: 10rpx;
}